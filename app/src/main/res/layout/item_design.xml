<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rounded_recycler_view"
        android:layout_marginTop="9dp">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="13dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/salsiilogo">


            </ImageView>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Salsii.com"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imageView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/timeView"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="22:53Pm"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_toRightOf="@id/textView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="57dp"/>

        <TextView
            android:id="@+id/messageView"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Automated stress detection using natural language processing and machine learning"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@id/textView"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="12dp"/>

    </RelativeLayout>
    
</RelativeLayout>